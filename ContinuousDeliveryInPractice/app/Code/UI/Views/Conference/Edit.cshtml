@model CodeCampServerLite.UI.Models.ConferenceEditModel

@{
	ViewBag.Title = "Edit Conference";
}

<h2>Conference Details</h2>

    @using (Html.BeginForm("Save", "Conference"))
    {
        <p>
			@Html.LabelFor(m => m.Name) @Html.TextBoxFor(m => m.Name)
			@Html.HiddenFor(m => m.Id)
        </p>
        <p>
			@Html.LabelFor(m => m.Location) @Html.TextBoxFor(m => m.Location)
        </p>
        <p>
			@Html.LabelFor(m => m.City) @Html.TextBoxFor(m => m.City)
        </p>
				<h2>Attendees</h2>	
        <table>
					<thead>
						<tr>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Email</th>
            </tr>
					</thead>
					<tbody>
					@for (int i = 0; i < Model.Attendees.Length; i++)
					{
						var count = i;
						<tr>
							<td>
								@Html.HiddenFor(m => m.Attendees[count].Id)
								@Html.TextBoxFor(m => m.Attendees[count].FirstName)
							</td>
							<td>
								@Html.TextBoxFor(m => m.Attendees[count].LastName)
							</td>
							<td>
								@Html.TextBoxFor(m => m.Attendees[count].Email)
							</td>
						</tr>
					} 
					</tbody>
				</table>
        <p>
            <input id="Submit" type="submit" value="Save" />
        </p>
    }
